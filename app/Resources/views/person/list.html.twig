{% extends 'base.html.twig' %}

{% block title %} Listado de personas {% endblock %}

{% block content %}

<h2>Listado de personas</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>id</th>
			<th>Nombre</th>	
			<th>Email</th>	
			<th>Eliminar</th>
		</tr>
	</thead>
	{% for person in persons %}
	<tbody>
		<tr>
			<td><a href="{{ path('person_show', {'id' : person.id }) }}">
				{{ person.id }}</a></td>
			<td>{{ person.name }}</td>
			<td>{{ person.email }}</td>
			
			<td><a href="{{ path('person_delete', {'id' : person.id }) }}">
				<i class="fa fa-trash fa-lg"></i></a></td>
			
		</tr>		
	</tbody>
	{% endfor %}
</table>

<ul>
	<li><a href="{{ app.request.headers.get('referer') }}">Atr√°s</a></li>	
</ul>


{% endblock %}
