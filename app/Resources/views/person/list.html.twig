{% extends 'base.html.twig' %}

{% trans_default_domain 'AppBundle' %}

{% block title %} {{ 'person.list.title' | trans }} {% endblock %}

{% block content %}

<h2>{{ 'person.list.title' | trans }}</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>{{ 'person.id' | trans }}</th>
			<th>{{ 'person.name' | trans }}</th>	
			<th>{{ 'person.email' | trans }}</th>	
			<th>{{ 'person.list.edit' | trans }}</th>
			<th>{{ 'person.list.delete' | trans }}</th>
		</tr>
	</thead>
	{% for person in persons %}
	<tbody>
		<tr>
			<td><a href="{{ path('person_show', {'id' : person.id }) }}">
				{{ person.id }}</a></td>
			<td>{{ person.name }}</td>
			<td>{{ person.email }}</td>
			
			<td><a href="{{ path('person_edit', {'id' : person.id }) }}">
				<i class="fa fa-pencil-square-o"></i></a></td>
			<td><a href="{{ path('person_delete', {'id' : person.id }) }}">
				<i class="fa fa-trash fa-lg"></i></a></td>
			
		</tr>		
	</tbody>
	{% endfor %}
</table>

<ul>
	<li><a href="{{ app.request.headers.get('referer') }}">Atr√°s</a></li>	
</ul>


{% endblock %}
