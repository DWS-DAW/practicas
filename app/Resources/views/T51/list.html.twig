{% extends 'base.html.twig' %}

{% block title %} Listado de productos {%endblock %}

{% block body %}

<h2>Listado de productos</h2>

<table>
	<tr>
		<th>Nombre</th>
		<th>Descripción</th>
		<th>Precio(€)</th>
	</tr>
	{% for product in products %}
	<tr>
		<td>{{ product.name }}</td>
		<td>{{ product.description }}</td>
		<td>{{ product.price }}</td>
	</tr>
	{% endfor %}
</table>

<ul>
	<li><a href="{{ path('_t51_index') }}">Índice actividad</a></li>
</ul>


{% endblock %}
