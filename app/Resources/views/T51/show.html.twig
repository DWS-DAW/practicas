{% extends 'base.html.twig' %} 

{% block title %} Producto {{ product.name }} {% endblock %} 

{% block body %}

<h2>Producto {{ product.id }}</h2>

<table>
<tbody>
	<tr><td><strong>Nombre</strong></td><td>{{ product.name }}</td></tr>
	<tr><td><strong>Descripción</strong></td><td>{{ product.description }}</td></tr>
	<tr><td><strong>Precio</strong></td><td>{{ product.price | localizedcurrency('EUR') }}</td></tr>
	<tr><td><strong>Imagen</strong></td><td><i class="fa fa-bug fa-3x"></i></td></tr>		
</tbody>
</table>

<ul>
	<li><a href="{{ app.request.headers.get('referer') }}">Atrás</a></li>	
</ul>


{% endblock %}
