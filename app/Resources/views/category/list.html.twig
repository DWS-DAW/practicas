{% extends 'base.html.twig' %}

{% block title %} Listado de Categorías {%endblock %}

{% block body %}

<h2>Listado de Categorías</h2>

<table>
	<tr>
		<th>id</th>
		<th>Nombre</th>
		{% if is_granted('ROLE_APP_ADMIN') %}
		<th>Editar</th>
		<th>Borrar</th>
		{% endif %}	
			
	</tr>
	{% for category in categories %}
	<tr>
		<td>{{ category.id }}</td>
		<td><a href="{{ path('_t52_product_list_category', {'name' : category.name }) }}">			
			{{ category.name }}</a>
		</td>
		{% if is_granted('ROLE_APP_ADMIN') %}
		<td><a href="{{ path('_category_edit', {'id' : category.id }) }}">
			<i class="fa fa-pencil-square-o"></i></a></td>
		<td><a href="{{ path('_t52_category_delete', {'id' : category.id }) }}">
			<i class="fa fa-trash fa-lg"></i></a>
		</td>
		{% endif %}		
	</tr>
	{% endfor %}
</table>

<ul>
	<li><a href="{{ app.request.headers.get('referer') }}">Atrás</a></li>	
</ul>


{% endblock %}
